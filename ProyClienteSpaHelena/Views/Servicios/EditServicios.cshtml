@model ProySpaHelena.Models.Servicio

@{
    ViewData["Title"] = "EditServicios";
}

<h1 class="mb-4">✏️ Editar Servicio</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4 shadow-lg rounded-4">
            <h4 class="mb-3">Detalles del Servicio</h4>
            <hr />
            <form asp-action="EditServicios">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Id" class="form-label fw-bold"></label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del servicio" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Activo" class="form-label fw-bold"></label>
                    <input asp-for="Activo" class="form-control" placeholder="Ej: true o false" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="spa-btn spa-btn-green">
                        💾 Guardar
                    </button>
                    <a asp-action="IndexServicios" class="spa-btn spa-btn-blue">
                        🔙 Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .spa-btn {
        border-radius: 10px;
        font-weight: 600;
        padding: 6px 14px;
        border: none;
        transition: all 0.3s ease-in-out;
        color: #fff !important;
        text-decoration: none;
        display: inline-block;
    }

    .spa-btn-green {
        background: linear-gradient(135deg, #34d399, #059669);
    }

        .spa-btn-green:hover {
            background: linear-gradient(135deg, #059669, #047857);
            transform: scale(1.08);
        }

    .spa-btn-blue {
        background: linear-gradient(135deg, #60a5fa, #2563eb);
    }

        .spa-btn-blue:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            transform: scale(1.08);
        }

    .spa-btn-purple {
        background: linear-gradient(135deg, #a78bfa, #7c3aed);
        font-size: 1rem;
        padding: 10px 18px;
    }

        .spa-btn-purple:hover {
            background: linear-gradient(135deg, #7c3aed, #5b21b6);
            transform: scale(1.1);
            box-shadow: 0 6px 14px rgba(0,0,0,0.2);
        }

    .spa-btn-yellow {
        background: linear-gradient(135deg, #facc15, #eab308); /* amarillo dorado */
    }

        .spa-btn-yellow:hover {
            background: linear-gradient(135deg, #eab308, #ca8a04);
            transform: scale(1.08);
            box-shadow: 0 6px 14px rgba(0,0,0,0.15);
        }
</style>