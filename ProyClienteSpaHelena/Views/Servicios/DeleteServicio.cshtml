@model ProySpaHelena.Models.Servicio

@{
    ViewData["Title"] = "DeleteServicio";
}

<h1 class="mb-4 text-danger">🗑️ Eliminar Servicio</h1>

<div class="alert alert-warning shadow-sm rounded-3 mb-4">
    <h4 class="alert-heading">⚠️ ¿Seguro que quieres eliminar este servicio?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card p-4 shadow-lg rounded-4 mb-4">
    <h4 class="mb-3">Detalles del Servicio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-bold">ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-3 fw-bold">Nombre</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-3 fw-bold">Estado</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Activo))
            {
                <span class="badge bg-primary">@Model.Activo</span>
            }
            else
            {
                <span class="badge bg-secondary">Sin estado</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteServicio" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="spa-btn spa-btn-red">
        🗑️ Eliminar
    </button>
    <a asp-action="Index" class="spa-btn spa-btn-blue">
        🔙 Volver a la lista
    </a>
</form>

