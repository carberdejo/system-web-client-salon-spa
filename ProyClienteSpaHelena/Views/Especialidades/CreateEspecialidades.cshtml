@model ProySpaHelena.Models.VariantesServicio

@{
    ViewData["Title"] = "CreateEspecialidades";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helen Spa</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:#fef9f9; font-family: 'Quicksand', sans-serif;">

    <div class="container mt-5">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header text-white text-center"
                 style="background: linear-gradient(135deg, #ff6f91, #845ec2);">
                <h3 class="mb-0">🌸 Crear Nueva Especialidad 🌸</h3>
            </div>

            <div class="card-body p-4">
                <h5 class="text-muted text-center mb-4">Complete los datos del servicio</h5>
                <hr />

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="CreateEspecialidades" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            

                            <div class="form-group mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold"></label>
                                <input asp-for="Nombre" class="form-control shadow-sm" placeholder="Nombre de la especialidad" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DuracionMin" class="form-label fw-bold"></label>
                                <input asp-for="DuracionMin" class="form-control shadow-sm" placeholder="Duración en minutos" />
                                <span asp-validation-for="DuracionMin" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Precio" class="form-label fw-bold"></label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light">S/.</span>
                                    <input asp-for="Precio" class="form-control" placeholder="Precio en soles" />
                                </div>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Activo" class="form-label fw-bold"></label>
                                <input asp-for="Activo" class="form-control shadow-sm" placeholder="¿Activo? (true/false)" />
                                <span asp-validation-for="Activo" class="text-danger"></span>
                            </div>

                            <div class="text-center mt-4">
                                <input type="submit" value="💾 Crear" class="btn btn-success px-4 shadow-sm" />
                                <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 shadow-sm">⬅️ Volver</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="mt-3 text-center">
                    <h5 class="text-danger">@ViewBag.error</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
