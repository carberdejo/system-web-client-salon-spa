@using Newtonsoft.Json
@using ProySpaHelena.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyClienteSpaHelena</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyClienteSpaHelena.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="content-area">
        <header>
            @{
                var usuarioJson = Context.Session.GetString("Usuario");
                Trabajadora? usuario = null;
                if (!string.IsNullOrEmpty(usuarioJson))
                {
                    usuario = JsonConvert.DeserializeObject<Trabajadora>(usuarioJson);
                }
                var isRecepcionista = usuario?.IdRol == 3;
            }

            <nav class="navbar navbar-expand-lg app-navbar shadow-sm">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" alt="Logo Helena Spa" />
                        <span class="fw-semibold">Helena Spa</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            @if (!isRecepcionista)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="mantenimientosDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Mantenimientos
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="mantenimientosDropdown">
                                        <li><a class="dropdown-item" asp-controller="Cliente" asp-action="IndexClientes">Clientes</a></li>
                                        <li><a class="dropdown-item" asp-controller="Trabajador" asp-action="IndexTrabajador">Trabajador</a></li>
                                        <li><a class="dropdown-item" asp-controller="Servicios" asp-action="IndexServicio">Servicios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Especialidades" asp-action="IndexEspecialidades">Especialidades</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reserva" asp-action="IndexReserva">Reserva</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Trabajador" asp-action="AsistenciaTrabajador">Asistencia</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="reportesDropDown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Reportes
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="reportesDropDown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Reporte" asp-action="ReporteTrabajadores">RepT</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Reporte" asp-action="ReporteServicios">RepServ</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            @if (usuario != null)
                            {
                                <li class="nav-item dropdown d-flex align-items-center">
                                    <a class="nav-link dropdown-toggle avatar-btn" href="#" id="userDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-fill avatar-icon"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li class="dropdown-header fw-bold text-center">
                                            @usuario.Nombre
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <form asp-controller="Session" asp-action="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger" style="background:none; border:none;">
                                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a class="nav-link avatar-btn" asp-controller="Session" asp-action="Login">
                                        <i class="bi bi-person-fill avatar-icon"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

<style>
    /* === FONDO GENERAL === */
    body {
        background-color: #fdf9f6 !important; /* café clarito fantasmal */
    }

    html, body {
        transition: background-color 0.3s ease-in-out;
    }

    /* === NAVBAR GLOBAL === */
    .app-navbar {
        position: sticky;
        top: 0;
        z-index: 1030;
        background: rgba(255, 255, 255, 0.92); /* fondo blanco casi translúcido */
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
        padding: 0.35rem 1rem;
        backdrop-filter: blur(6px);
    }

        .app-navbar .nav-link,
        .app-navbar .navbar-brand {
            color: #3a2e2e !important; /* café oscuro elegante */
            font-weight: 500;
            transition: background 0.3s ease;
        }

            .app-navbar .nav-link:hover,
            .app-navbar .dropdown-item:hover {
                background: rgba(58, 41, 33, 0.05); /* marrón muy suave al hover */
                border-radius: 0.35rem;
            }

    /* Logo */
    .navbar-brand img {
        height: 36px;
        width: auto;
        margin-right: 0.5rem;
    }

    /* Avatar usuario */
    .avatar-btn {
        padding: 0;
        line-height: 1;
    }

    .avatar-icon {
        font-size: 2rem;
        color: #5c524f;
        transition: color 0.2s ease;
    }

        .avatar-icon:hover {
            color: #8b5e3c; /* marrón claro al pasar mouse */
        }

    .dropdown-menu-end {
        min-width: 180px;
    }

    .dropdown-header {
        font-size: 1.1rem;
        color: #3f3f3f;
    }

    .dropdown-item.text-danger:hover {
        background-color: rgba(139, 0, 0, 0.05);
        color: #c0392b !important;
    }

    /* Toggle */
    .navbar-toggler {
        border: none;
        outline: none;
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%280,0,0,0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }

    /* Margen main */
    main {
        margin-top: 1.5rem;
        margin-bottom: 2rem;
    }

    /* Dropdowns suaves */
    .dropdown-menu {
        transition: all 0.3s ease;
    }

    /* === DROPDOWN HOVER === */
    .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: 0;
    }

    .dropdown:hover > .dropdown-toggle::after {
        transform: rotate(180deg);
    }

    .dropdown-toggle::after {
        transition: transform 0.3s ease;
    }

    .fw-semibold {
        color: #B08C4F;
    }

</style>

