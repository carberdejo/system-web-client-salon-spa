<!DOCTYPE html>
<html lang="en">
@using Newtonsoft.Json
@using ProySpaHelena.Models

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyClienteSpaHelena</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyClienteSpaHelena.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
       

        @{
            var usuarioJson = Context.Session.GetString("Usuario");
            Trabajadora? usuario = null;
            if (!string.IsNullOrEmpty(usuarioJson))
            {
                usuario = JsonConvert.DeserializeObject<Trabajadora>(usuarioJson);
            }
        }
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProyClienteSpaHelena</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="mantenimientosDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mantenimientos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mantenimientosDropdown">
                                <li><a class="dropdown-item" asp-controller="Cliente" asp-action="IndexClientes">Clientes</a></li>
                                <li><a class="dropdown-item" asp-controller="Trabajador" asp-action="IndexTrabajador">Trabajador</a></li>
                                <li><a class="dropdown-item" asp-controller="Servicios" asp-action="IndexServicio">Servicios</a></li>
                                <li><a class="dropdown-item" asp-controller="Especialidades" asp-action="IndexEspecialidades">Especialidades</a></li>
                                <li><a class="dropdown-item" asp-controller="Reserva" asp-action="IndexReserva">Reserva</a></li>

                                <!-- Agrega más aquí -->
                            </ul>
                        </li>

                        @if (usuario != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @usuario.Nombre
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Session" asp-action="Perfil">Mi Perfil</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Session" asp-action="CerrarSesion">Cerrar sesión</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Session" asp-action="Login">Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProyClienteSpaHelena - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


 


