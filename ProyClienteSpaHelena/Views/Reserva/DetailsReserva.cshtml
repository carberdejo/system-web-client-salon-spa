@model ProyClienteSpaHelena.Models.ReservaResponseDTO


@{
    ViewData["Title"] = "DetailsReserva";
}


<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header text-white bg-gradient"
             style="background: linear-gradient(135deg, #d63384, #6f42c1);">
            <h3 class="mb-0 text-center">Detalles de la Reserva </h3>
        </div>


        <div class="card-body p-4">
            <h5 class="card-title text-muted text-center mb-4">Información de la Reserva</h5>
            <hr />


            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Id)
                </dd>


                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.NombreCliente)
                </dt>
                <dd class="col-sm-9">
                    <span class="badge bg-light text-dark shadow-sm px-3 py-2">
                        @Html.DisplayFor(model => model.NombreCliente)
                    </span>
                </dd>


                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.NomRecepcionista)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NomRecepcionista)
                </dd>


                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-primary fw-semibold">
                        📅 @Html.DisplayFor(model => model.Fecha)
                    </span>
                </dd>


                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success px-3 py-2 shadow-sm">
                        @Html.DisplayFor(model => model.Estado)
                    </span>
                </dd>


                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Notas)
                </dt>
                <dd class="col-sm-9 fst-italic text-muted">
                    @Html.DisplayFor(model => model.Notas)
                </dd>


                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.NomTrabajadora)
                </dt>
                <dd class="col-sm-9 text-pink fw-semibold">
                    💇‍♀️ @Html.DisplayFor(model => model.NomTrabajadora)
                </dd>
            </dl>
            @if (Model.Detalles != null && Model.Detalles.Any())
            {
                <hr />
                <h5 class="text-center text-info">🧾 Detalles del Servicio</h5>
                <table class="table table-hover mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>Especialidad</th>
                            <th>Cantidad</th>
                            <th>Precio (minutos)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.Detalles)
                        {
                            <tr>
                                <td>@detalle.VarianteId</td>
                                <td>$@detalle.Cantidad</td>
                                <td>@detalle.Precio</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic text-center mt-4">No hay detalles registrados para esta reserva.</p>
            }
        </div>


        <div class="card-footer text-center bg-light">


            <a asp-action="IndexReserva" class="btn btn-outline-secondary shadow-sm px-4">
                ⬅️ Volver a la Lista
            </a>
        </div>
    </div>
</div>

