<div>
    <a asp-action="IndexClientes">Back to List</a>
</div>

@if (ViewBag.message != null)
{
    <div class="alert alert-danger">@ViewBag.message</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
