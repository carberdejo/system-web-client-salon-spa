@model IEnumerable<ProySpaHelena.Models.Cliente>

@{
    ViewData["Title"] = "IndexClientes";
}

<h1>IndexClientes</h1>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-succes">@TempData["mensaje"]</div>
}


<p>
    <a asp-action="CreateClientes">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreadoEn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreadoEn)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditClientes", new { id=item.Id }) |
                @Html.ActionLink("Ver", "Details", new {  id=item.Id }) 
            </td>
        </tr>
}
    </tbody>
</table>
