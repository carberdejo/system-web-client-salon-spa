@model ProySpaHelena.Models.Asistencia
@using Newtonsoft.Json;
@using ProySpaHelena.Models

@{
    ViewData["Title"] = "Registrar Asistencia";
    var trabajadora = ViewBag.Trabajador as Trabajadora;
}

<h2 class="text-center fw-bold mb-4">Registrar Asistencia</h2>
<hr class="mb-4" />

@if (trabajadora != null)
{
    <div class="card border-primary mb-4">
        <div class="card-body">
            <p><strong>Código de Trabajadora:</strong> <span class="text-primary">@trabajadora.Id</span></p>
            <p><strong>Nombre:</strong> <span class="fw-semibold">@trabajadora.Nombre @trabajadora.Apellido</span></p>
        </div>
    </div>

    <form asp-action="RegistrarAsistencia" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="TrabajadoraId" value="@trabajadora.Id" />

        <div class="mb-3">
            <label asp-for="Observaciones" class="form-label fw-bold">Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Estado" class="form-label fw-bold">Estado</label>
            @Html.DropDownListFor(model => model.Estado,
                     new SelectList(new[] { "PRESENTE", "TARDE", "AUSENTE", "SALIDA_ANTICIPADA" }),
                     "-- Seleccione Estado --", new { @class = "form-select" })
            <span asp-validation-for="Estado" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-check-circle"></i> Guardar Asistencia
        </button>
    </form>
}
else
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> No se encontró información de la trabajadora.
    </div>
}

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
