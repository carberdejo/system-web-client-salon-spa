@model ProySpaHelena.Models.Disponibilidad

@{
    ViewData["Title"] = "HorarioId";
}

<div class="card shadow-lg border-0 mt-4">
    <div class="card-header text-center">
        <h2 class="spa-btn spa-btn-purple w-100">🕒 Detalle de Disponibilidad</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Código</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3 fw-bold">Trabajadora</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TrabajadoraId)</dd>

            <dt class="col-sm-3 fw-bold">Hora Inicio</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HoraInicio)</dd>

            <dt class="col-sm-3 fw-bold">Hora Fin</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HoraFin)</dd>

            <dt class="col-sm-3 fw-bold">Válido Desde</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ValidoDesde)</dd>
        </dl>
    </div>
    <div class="card-footer text-center">

        <a asp-action="AsistenciaTrabajador" class="spa-btn spa-btn-blue ms-2">↩️ Volver</a>
    </div>
</div>

<style>
    .spa-btn {
        border-radius: 10px;
        font-weight: 600;
        padding: 6px 14px;
        border: none;
        transition: all 0.3s ease-in-out;
        color: #fff !important;
        text-decoration: none;
        display: inline-block;
    }

    .spa-btn-green {
        background: linear-gradient(135deg, #34d399, #059669);
    }

        .spa-btn-green:hover {
            background: linear-gradient(135deg, #059669, #047857);
            transform: scale(1.08);
        }

    .spa-btn-blue {
        background: linear-gradient(135deg, #60a5fa, #2563eb);
    }

        .spa-btn-blue:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            transform: scale(1.08);
        }

    .spa-btn-purple {
        background: linear-gradient(135deg, #a78bfa, #7c3aed);
        font-size: 1rem;
        padding: 10px 18px;
    }

        .spa-btn-purple:hover {
            background: linear-gradient(135deg, #7c3aed, #5b21b6);
            transform: scale(1.1);
            box-shadow: 0 6px 14px rgba(0,0,0,0.2);
        }

    .spa-btn-yellow {
        background: linear-gradient(135deg, #facc15, #eab308); /* amarillo dorado */
    }

        .spa-btn-yellow:hover {
            background: linear-gradient(135deg, #eab308, #ca8a04);
            transform: scale(1.08);
            box-shadow: 0 6px 14px rgba(0,0,0,0.15);
        }
</style>